<Page x:Name="page" x:Class="Thea2Translator.DesktopApp.Pages.ModuleSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Thea2Translator.DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkMenuSelector"
      Style="{StaticResource MainPageStyle}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="5" Grid.RowSpan="2" Grid.Column="1" Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="barTextBlock" HorizontalAlignment="Left" Margin="83,312.667,-63,-317" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="635" TextAlignment="Center" Grid.Row="2"/>
            <Label Content="{DynamicResource chooseActionLabelModuleSelection}" Style="{StaticResource fontBase}" x:Name="txtCurrentModuleInProcess" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1"/>
            <ProgressBar x:Name="barStatus" Grid.Row="2"/>
        </Grid>
        <Button x:Name="btnChooseDataBase" FontWeight="Bold" Content="DataBase" Style="{StaticResource styleButton}" Grid.Column="2" Grid.Row="3" />
        <Button x:Name="btnChooseModulus" FontWeight="Bold" Content="Modules" Style="{StaticResource styleButton}" Grid.Column="4" Grid.Row="3" />
        <Label Content="{DynamicResource selectModuleLabelModuleSelection}" Style="{StaticResource fontBase}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Grid Grid.ColumnSpan="5" Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnImportFromSteam" Style="{StaticResource styleButton}" Click="BtnImportFromSteam_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="{DynamicResource importSteamButtonModuleSelection}"/></TextBlock>
            </Button>
            <Button x:Name="btnPrepareToMachineTranslate" Style="{StaticResource styleButton}" Grid.Column="2" Click="BtnPrepareToMachineTranslate_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="{DynamicResource prepareMachineButtonModuleSelection}"/></TextBlock>
            </Button>
            <Button x:Name="btnImportFromMachineTranslate" Style="{StaticResource styleButton}" Grid.Column="4" Click="BtnImportFromMachineTranslate_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="{DynamicResource importMachineButtonModuleSelection}"/></TextBlock>
            </Button>
            <Button x:Name="btnTranslate" Style="{StaticResource styleButton}" Grid.Column="6" Click="BtnTranslate_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="{DynamicResource translateButtonModuleSelection}"/></TextBlock>
            </Button>
            <Button x:Name="btnExportToSteam" Style="{StaticResource styleButton}" Grid.Column="8" Click="BtnExportToSteam_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="{DynamicResource exportSteamButtonModuleSelection}"/></TextBlock>
            </Button>
        </Grid>
        <Button x:Name="btnChooseNames" FontWeight="Bold" Content="Names" Style="{StaticResource styleButton}" Grid.Column="5" Grid.Row="3" Margin="73,0,0,0"/>

    </Grid>
</Page>
